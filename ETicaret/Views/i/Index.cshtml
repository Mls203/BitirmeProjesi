@model ETicaret.Models.i.IndexModel
@{
    ViewBag.Title = "Ana Sayfa";
    //CATEGORİ FİLTRELEME BAŞLANGIÇ
    // seçilen kategorileri listeye atarız
    List<ETicaret.Entities.Categories> categories = new List<ETicaret.Entities.Categories>();
    if (Model.Category != null)
    {
        categories.Add(Model.Category);
        var parentcat = Model.Category.Categories2;//Categories2 parent id sidir
        while (parentcat != null)
        {
            categories.Add(parentcat);
            parentcat = parentcat.Categories2;
        }
    }
}
<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("index", "i", new { id = 0 })">Teknolojik Aletler</a></li>
            @for (int i = categories.Count - 1; i >= 0; i--)//seçilen kategorileri listeye
                                                           //filtreleme için tersten okuyoruz
            {
                if (i == 0)//seçilen kategori budur
                {
                    <li class="active">@categories[i].Name</li>
                }
                else
                {
                    <li><a href="@Url.Action("index","i",new { id=categories[i].Id })">@categories[i].Name</a></li>
                }

            }

        </ol>
    </div>
</div>

<!--CATEGORİ FİLTRELEME BİTTİ-->
<div class="row">
    @foreach (var item in Model.Products)
    {

        @Html.Partial("_ProductItem", item)//partial viewa ürünü gönderiyorum
    }

</div>

<div class="modal fade" id="productinfo" tabindex="-1" role="dialog" aria-labelledby="productinfo-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close btn" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="productinfo-label">Ürün Bilgisi</h4>
            </div>
            <div class="modal-body">
                <p id="ModalBodyP"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>
                <a href="~/i/Basket/Id" id="modelBasketHref" class="btn btn-success">
                    <span class="glyphicon glyphicon-shopping-cart"></span>&nbsp;Sepete At
                </a>
            </div>
        </div>
    </div>
</div>

<script>

    function GetProductInfo(Id) {
        $.ajax({
            url: "/i/GetProductDescription/" + Id,
            method: "get",
            async: true,
            success: function (data) {
                $("#ModalBodyP").text(data);
                //alert($("#modelBasketHref").attr("href"));
                var newHref = $("#modelBasketHref").attr("href");
                newHref = newHref.replace("/Id", "/" + Id);
                $("#modelBasketHref").attr("href", newHref);
            },
            error: function (err) {
                console.log("GetProductInfo eror: ", err);
                $("#productinfo").modal("hide");
            }
        });
    }


</script>