@model IEnumerable<ETicaret.Entities.Categories>

@{
    ViewBag.Title = "Kategoriler";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Edit")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Kategori Adı")
        </th>
       
        <th>
            @Html.DisplayName("Üst Kategorisi")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Categories2.Name)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.Id })" class="btn btn-info">Düzenle</a>

            <button type="button" class="btn btn-danger" onclick="DeleteProduct('@Url.Action("Delete", new { id=item.Id })')">Sil</button>

        </td>
    </tr>
}

</table>
<script>


    function DeleteProduct(url) {
        if (confirm("Silmek istediğinize emin misiniz?")) {
            location.href = url;
        }
    }
</script>