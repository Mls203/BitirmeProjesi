@model ETicaret.Entities.Products
<div class="col-md-3 col-sm-4 col-xs-12">
    <div class="thumbnail">
        @{
            if (string.IsNullOrEmpty(Model.ProductImageName))
            {
                Model.ProductImageName = "https://placehold.jp/300x150.png";
            }
            else
            {
                Model.ProductImageName = "/" + Model.ProductImageName;
            }

        }
        <img src="@Model.ProductImageName" class="img img-responsive" style="max-height:126px">
        <div class="caption">
            <h3 class="productNameStyle">@Model.Name</h3>
            @*<p>@Model.Description</p>*@
            <p>
                <a href="~/i/AddBasket/@Model.Id" class="btn btn-success">
                    <span class="glyphicon glyphicon-shopping-cart"></span>&nbsp;Sepete Ekle
                </a>
                <button onclick="GetProductInfo(@Model.Id)" data-toggle="modal" data-target="#productinfo" class="btn btn-info">
                    <span class="glyphicon glyphicon-info-sign"></span>&nbsp;Bilgi
                </button>
            </p>
        </div>
    </div>
</div>