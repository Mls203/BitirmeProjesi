@model ETicaret.Models.Account.LoginModel
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{


    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h2>Giriş</h2>
                    <small style="color:red;">@TempData["info"]</small><br />
                    @{
                        if (ViewBag.message == null)
                        {
                            <small>Lütfen e-mail adresinizi ve şifrenizi giriniz.</small>

                        }
                        else
                        {
                            <div class="alert alert-danger">@ViewBag.message</div>

                        }
                    }

                    <small>Please enter e-mail and password.</small>
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <center>

                            <img src="http://placehold.jp/125x125.png" class="img-circle img-responsive" />
                        </center>
                    </div>

                    <div class="form-group">

                        @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control", placeholder = "e-mail address", type = "email" })
                        @*<input type="email" name="email" id="email" placeholder="e-mail address" class="form-control" />*@
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control", placeholder = "password", type = "password" })
                        @*<input type="password" name="password" id="password" placeholder="password" class="form-control" />*@
                    </div>

                </div>
                <div class="panel-footer text-right">
                    <a href="~/Account/ForgotPassword" class="btn btn-warning">
                        <span class="glyphicon glyphicon-asterisk"></span> Şifremi Unuttum
                    </a>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-log-in"></span> Giriş Yap
                    </button>

                </div>
            </div>
     

    </div>

}




